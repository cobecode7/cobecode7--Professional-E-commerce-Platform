# =================================================================
# SECURITY CONFIGURATION TEMPLATE
# =================================================================
# Copy this file to .env and fill in your secure values
# NEVER commit .env files to version control!
# =================================================================

# =================================================================
# CRITICAL SECURITY SETTINGS
# =================================================================

# Django Secret Key (GENERATE A NEW ONE FOR PRODUCTION!)
# Use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-here-change-me

# Debug Mode (MUST be False in production)
DEBUG=False

# Allowed Hosts (specify your domain names)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com

# =================================================================
# DATABASE CONFIGURATION
# =================================================================

# Production Database (PostgreSQL recommended)
DATABASE_URL=postgresql://ecommerce_user:ecommerce_dev123@localhost:5432/ecommerce_dev

# Development Database (PostgreSQL)  
DB_NAME=ecommerce_dev
DB_USER=ecommerce_user
DB_PASSWORD=ecommerce_dev123
DB_HOST=localhost
DB_PORT=5432

# =================================================================
# CACHE & SESSION STORAGE
# =================================================================

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Cache Backend
CACHE_URL=redis://localhost:6379/1

# =================================================================
# EMAIL CONFIGURATION
# =================================================================

# Email Backend
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# From Email Address
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=server@yourdomain.com

# =================================================================
# SECURITY SETTINGS
# =================================================================

# HTTPS Settings (Enable in production)
SECURE_SSL_REDIRECT=False
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# CORS Settings (Restrict in production)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_ALL_ORIGINS=False

# Cookie Security
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False

# =================================================================
# API & THIRD-PARTY INTEGRATIONS
# =================================================================

# API Rate Limiting
API_RATE_LIMIT_PER_MINUTE=100
API_RATE_LIMIT_AUTHENTICATED=1000

# JWT Settings (if using)
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=1440

# =================================================================
# PAYMENT PROCESSING
# =================================================================

# Stripe Configuration (for e-commerce)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =================================================================
# FILE STORAGE & CDN
# =================================================================

# AWS S3 Configuration (for production file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket
AWS_S3_REGION_NAME=us-east-1

# Cloudflare CDN (optional)
CLOUDFLARE_API_TOKEN=your-cloudflare-token

# =================================================================
# MONITORING & LOGGING
# =================================================================

# Sentry Error Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Log Level
LOG_LEVEL=INFO

# =================================================================
# ENVIRONMENT IDENTIFICATION
# =================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Version/Build Information
APP_VERSION=1.0.0
BUILD_NUMBER=1

# =================================================================
# BACKUP & MAINTENANCE
# =================================================================

# Backup Configuration
BACKUP_STORAGE_URL=s3://your-backup-bucket
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Maintenance Mode
MAINTENANCE_MODE=False
MAINTENANCE_MESSAGE="Site is under maintenance. Please try again later."

